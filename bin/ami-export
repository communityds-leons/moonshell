#!/usr/bin/env bash
#
# This script exports and AMI for usage by other CDS accounts
#

source $(dirname $0)/../moon.sh

[[ $# == 0 ]] \
  && echoerr "Usage: $(basename $0) AMI_ID" \
  && exit \
  || AMI=$1

[[ ! ${AMI} =~ ^ami-[0-9a-f]*$ ]] \
  && echoerr "ERROR: AMI '${AMI}' is an invalid ID" \
  && exit 1

ami_export ${AMI}
ami_describe ${AMI}

